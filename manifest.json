{
  "manifest_version": 3,
  "name": "LeetCode to Markdown",
  "version": "1.0",
  "description": "Convert your LeetCode solution to well-structured markdown using Gemini.",
  "permissions": ["clipboardRead", "scripting", "tabs", "activeTab", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"]
}
